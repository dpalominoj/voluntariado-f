language = "python3.10" # Specifying a recent Python version
run = "flask run --host=0.0.0.0 --port=$PORT"

[env]
FLASK_APP = "main.py"
FLASK_ENV = "development" # Change to "production" for real deployment
# The following should be set in Replit Secrets:
# DATABASE_URL = "your_replit_postgresql_url"
# SECRET_KEY = "your_strong_random_secret_key"
# PYTHONUNBUFFERED = "1" # Often good for logging in containers

# onBoot can be used for initial setup if needed,
# but Replit usually handles pip install automatically.
# onBoot = "pip install -r requirements.txt && flask db upgrade"
# For Flask-Migrate, 'flask db upgrade' would be run in the shell or onBoot after setting up migrations.
# For the custom 'create-db' command, it would be 'flask create-db'.

# The 'replit.nix' file can also be used for more complex environment setup.
# For now, relying on automatic requirements.txt installation.
